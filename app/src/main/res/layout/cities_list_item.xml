<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="location"
            type="th.forge.simpleweatherapp.data.db.citieslist.Location" />

        <variable
            name="callback"
            type="th.forge.simpleweatherapp.presentation.list.LocationClickCallback" />

        <!--<variable
            name="viewModel"
            type="th.forge.simpleweatherapp.presentation.list.CitiesListViewModel" />

        <variable
            name="position"
            type="Integer" />-->

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_rv_height"
        android:layout_marginStart="@dimen/item_rv_horizontal_margin"
        android:layout_marginEnd="@dimen/item_rv_horizontal_margin"
        android:onClick="@{() -> callback.onClick(location)}"
        app:cardCornerRadius="@dimen/item_rv_corner_radius"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_rv_ll_padding">

            <TextView
                android:id="@+id/city_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{location.title}"
                android:textSize="@dimen/item_rv_title_text_size"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>